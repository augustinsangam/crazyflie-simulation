{
  "clangd.arguments": [
    "--compile-commands-dir=build"
  ],
  "cmake": {
    "configureOnOpen": true,
    "generator": "Unix Makefiles"
  },
  "editor": {
    "formatOnSave": true,
    "formatOnType": true,
    "rulers": [
      80
    ]
  },
  "explorer.confirmDelete": false,
  "filewatcher.commands": [
    {
      "match": "src",
      "isAsync": true,
      "cmd": "cd ${workspaceRoot} && ./launch.sh",
      "event": "onFileChange"
    }
  ],
  "files.associations": {
    "iostream": "cpp",
    "ostream": "cpp"
  }
}
