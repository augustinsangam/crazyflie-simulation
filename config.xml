<?xml version="1.0"?>

<!-- *************************************************** -->
<!-- * A fully commented XML is diffusion_1.xml. Refer * -->
<!-- * to it to have full information about what       * -->
<!-- * these options mean.                             * -->
<!-- *************************************************** -->

<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="0" />
    <experiment length="0" ticks_per_second="8" random_seed="2932" />
  </framework>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>

    <crazyflie_sensing_controller id="ssc" library="libcontroller">
      <actuators>
        <quadrotor_position implementation="default" />
      </actuators>
      <sensors>
        <positioning implementation="default" />
        <battery implementation="default" />
      </sensors>
      <params></params>
    </crazyflie_sensing_controller>

  </controllers>


  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="5, 5, 2" center="0,0,0">

    <!-- Arena external walls -->
    <box id="wall_north" size="4,0.1,2" movable="false">
      <body position="0,2,0" orientation="0,0,0" />
    </box>
    <box id="wall_south" size="4,0.1,2" movable="false">
      <body position="0,-2,0" orientation="0,0,0" />
    </box>
    <box id="wall_east" size="0.1,4,2" movable="false">
      <body position="2,0,0" orientation="0,0,0" />
    </box>
    <box id="wall_west" size="0.1,4,2" movable="false">
      <body position="-2,0,0" orientation="0,0,0" />
    </box>

    <!-- Drones -->
    <crazyflie id="argos_drone_0">
      <body position="0,0,0" orientation="0,0,0" />
      <controller config="ssc"/>
      <battery model="time_motion" delta="1e-3" pos_delta="1e-3" orient_delta="1e-3" />
    </crazyflie>
    <crazyflie id="argos_drone_1">
      <body position="0.1,0.1,0" orientation="0,0,0" />
      <controller config="ssc"/>
      <battery model="time_motion" delta="1e-3" pos_delta="1e-3" orient_delta="1e-3" />
    </crazyflie>

    <!-- Obstacles : walls, boxes and cylinders. -->
    <!-- Small walls -->
    <distribute>
      <position method="uniform" min="-2,-2,0" max="2,2,0" />
      <orientation method="uniform" min="0,0,0" max="360,0,0" />
      <entity quantity="5" max_trials="100">
        <box id="wall_s" size="0.6,0.01,1" movable="false" />
      </entity>
    </distribute>
    <!-- Medium walls -->
    <distribute>
      <position method="uniform" min="-2,-2,0" max="2,2,0" />
      <orientation method="constant" values="90,0,0" />
      <entity quantity="2" max_trials="100">
        <box id="wall_m" size="1,0.01,1" movable="false" />
      </entity>
    </distribute>
    <!-- Large walls -->
    <distribute>
      <position method="uniform" min="-2,-2,0" max="2,2,0" />
      <orientation method="uniform" min="0,0,0" max="360,0,0" />
      <entity quantity="1" max_trials="100">
        <box id="wall_l" size="1.5,0.01,1" movable="false" />
      </entity>
    </distribute>
    <!-- Some boxes -->
    <distribute>
      <position method="uniform" min="-2,-2,0" max="2,2,0" />
      <orientation method="uniform" min="0,0,0" max="360,0,0" />
      <entity quantity="2" max_trials="100">
        <box id="box" size="0.4,0.4,0.5" movable="false" />
      </entity>
    </distribute>
    <!-- Some cylinders -->
    <distribute>
      <position method="uniform" min="-2,-2,0" max="2,2,0" />
      <orientation method="constant" values="0,0,0" />
      <entity quantity="2" max_trials="200">
        <cylinder id="cylinder" height="0.5" radius="0.2" movable="false" />
      </entity>
    </distribute>
  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <pointmass3d id="pm3d" />
    <dynamics2d id="dyn2d" />
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <range_and_bearing id="rab" />
    <led id="leds" />
  </media>

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>
    <qt-opengl>
      <camera>
        <placements>
          <placement index="0" position="0,0,5" look_at="0,0,0" up="-1,0,0" lens_focal_length="30" />
        </placements>
      </camera>
    </qt-opengl>
  </visualization>

</argos-configuration>
