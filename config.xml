<?xml version="1.0"?>

<!-- *************************************************** -->
<!-- * A fully commented XML is diffusion_1.xml. Refer * -->
<!-- * to it to have full information about what       * -->
<!-- * these options mean.                             * -->
<!-- *************************************************** -->

<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="0" />
    <experiment length="0" ticks_per_second="8" random_seed="36502" />
  </framework>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>

    <crazyflie_controller id="cf_c" library="libcontroller">
      <actuators>
        <quadrotor_position implementation="default" />
      </actuators>
      <sensors>
        <positioning implementation="default" />
        <battery implementation="default" />
        <crazyflie_distance_scanner implementation="rot_z_only" show_rays="true" />
      </sensors>
      <params></params>
    </crazyflie_controller>

  </controllers>


  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="5, 5, 2" center="0,0,1">

    <!-- Arena external walls -->
    <box id="wall_north" size="4,0.1,2" movable="false">
      <body position="0,2,0" orientation="0,0,0" />
    </box>
    <box id="wall_south" size="4,0.1,2" movable="false">
      <body position="0,-2,0" orientation="0,0,0" />
    </box>
    <box id="wall_east" size="0.1,4,2" movable="false">
      <body position="2,0,0" orientation="0,0,0" />
    </box>
    <box id="wall_west" size="0.1,4,2" movable="false">
      <body position="-2,0,0" orientation="0,0,0" />
    </box>

    <!-- Drones -->
    <crazyflie id="simulation_1">
      <body position="-0.2,0,0" orientation="270,0,0" />
      <controller config="cf_c" />
      <battery model="time_motion" delta="3e-4" pos_delta="3e-4" orient_delta="3e-4" />
    </crazyflie>
    <crazyflie id="simulation_2">
      <body position="0.2,0,0" orientation="90,0,0" />
      <controller config="cf_c" />
      <battery model="time_motion" delta="3e-4" pos_delta="3e-4" orient_delta="3e-4" />
    </crazyflie>
    <crazyflie id="simulation_3">
      <body position="0,0.2,0" orientation="180,0,0" />
      <controller config="cf_c" />
      <battery model="time_motion" delta="3e-4" pos_delta="3e-4" orient_delta="3e-4" />
    </crazyflie>
    <crazyflie id="simulation_4">
      <body position="0,-0.2,0" orientation="0,0,0" />
      <controller config="cf_c" />
      <battery model="time_motion" delta="3e-4" pos_delta="3e-4" orient_delta="3e-4" />
    </crazyflie>

    <!-- arena_config -->
    <distribute>
      <position method="uniform" min="-2,-2,0" max="2,-0.6,0" />
      <orientation method="uniform" min="0,0,0" max="360,0,0" />
      <entity quantity="2" max_trials="1000">
        <box id="wall_1" size="0.5,0.6,1" movable="false" />
      </entity>
    </distribute>
    <distribute>
      <position method="uniform" min="-2,0.6,0" max="2,2,0" />
      <orientation method="uniform" min="0,0,0" max="360,0,0" />
      <entity quantity="1" max_trials="1000">
        <box id="wall_2" size="0.5,0.8,1" movable="false" />
      </entity>
    </distribute>
    <distribute>
      <position method="uniform" min="0.5,-2,0" max="2,2,0" />
      <orientation method="constant" values="0,0,0" />
      <entity quantity="1" max_trials="1000">
        <cylinder id="cylinder" height="1" radius="0.2" movable="false" />
      </entity>
    </distribute>
    <!-- arena_config -->

  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <pointmass3d id="pm3d" />
    <dynamics2d id="dyn2d" />
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <range_and_bearing id="rab" />
    <led id="leds" />
  </media>

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>
    <qt-opengl>
      <camera>
        <placements>
          <placement index="0" position="0,0,5" look_at="0,0,0" up="-1,0,0" lens_focal_length="30" />
        </placements>
      </camera>
    </qt-opengl>
  </visualization>

</argos-configuration>
